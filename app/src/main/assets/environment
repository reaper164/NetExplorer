#!/system/bin/sh

unset LD_PRELOAD

## Define the owner app package name.
APP_PGK_NAME=com.reaper.netexplorer

## Define chroot sudo path
CHROOT_EXEC=/usr/bin/sudo

## Combine android $PATH to chroot $PATH
export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:$PATH

## Define busybox path.
BUSYBOX=/data/data/$APP_PGK_NAME/files/busybox

## Define binaries.
chmod 777 /data/data/$APP_PGK_NAME/files/busybox
chmod 777 /data/data/$APP_PGK_NAME/files/chroot_exec

## Define chroot path to MNT variable.
chmod +x /data/data/$APP_PGK_NAME/shared_prefs/com.reaper.netexplorer_preferences.xml
MNT=`cat /data/data/$APP_PGK_NAME/shared_prefs/com.reaper.netexplorer_preferences.xml | grep "\"chroot_path\"" | sed "s/^.*\"chroot_path\">\(.*\)<\/string>/\1/g"`

## Validate busybox path.
if [ -z "$BUSYBOX" ]; then
    echo "[-] No busybox found."
    exit 1
fi

## Validate Chroot path.
if [ ! -d "$MNT" ]; then
    echo "[-] \"$MNT\" directory does not exist!"
    cat /data/data/$APP_PGK_NAME/shared_prefs/com.reaper.netexplorer_preferences.xml | grep "\"chroot_path\"" | sed "s/^.*\"chroot_path\">\(.*\)<\/string>/\1/g"
    exit 2
fi
